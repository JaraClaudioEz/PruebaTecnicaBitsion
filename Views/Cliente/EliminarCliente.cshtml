@model PruebaTecnicaBitsion.Models.Cliente

@{
    ViewBag.Title = "Eliminar";
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h2 class="display-2">Eliminar Cliente</h2>
        </div>
    </div>

    <div class="row">
        <div class="col">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(x => x.Id)
                    <div class="my-3">
                        <label class="form-label">Nombre Completo</label>
                        @Html.TextBoxFor(x => x.Nombre, htmlAttributes: new { @class = "form-control", @type = "text" })
                    </div>
                    <div class="my-3">
                        <label class="form-label">DNI</label>
                        @Html.TextBoxFor(x => x.DNI, htmlAttributes: new { @class = "form-control", @type = "number" })
                    </div>
                    <div class="my-3">
                        <label class="form-label">Fecha de Nacimiento</label>
                        @Html.TextBoxFor(x => x.Nacimiento, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @type = "date" })
                    </div>
                    <div class="my-3">
                        <label class="form-label">Género</label>
                        @Html.TextBoxFor(x => x.Genero, htmlAttributes: new { @class = "form-control", @type = "text" })
                    </div>
                    <div class="my-3 form-check">
                        <label class="form-label">Activo</label>
                        @Html.CheckBoxFor(x => x.Estado)
                    </div>
                    <div class="my-3 form-check">
                        <label class="form-label">Maneja?</label>
                        @Html.CheckBoxFor(x => x.Maneja)
                    </div>
                    <div class="my-3 form-check">
                        <label class="form-label">Usa Lentes?</label>
                        @Html.CheckBoxFor(x => x.Lentes)
                    </div>
                    <div class="my-3 form-check">
                        <label class="form-label">Es diabético?</label>
                        @Html.CheckBoxFor(x => x.Diabetico)
                    </div>
                    <div class="my-3">
                        <label class="form-label">Otras enfermedades:</label>
                        @Html.TextAreaFor(x => x.Nombre, htmlAttributes: new { @class = "form-control" })
                        <div id="ayudaEnfermedades" class="form-text">Si tiene otras enfermedades, descríbalas aquí.</div>
                    </div>
                    <button type="submit" class="btn btn-danger my-3">Eliminar</button>
                }
        </div>
    </div>
</div>